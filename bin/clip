import sys
import shutil
from subprocess import Popen, PIPE
from contextlib import contextmanager, ExitStack


@contextmanager
def open_clipboard(mode='r'):
    if mode == 'r':
        if shutil.which('pbpaste'):
            with Popen('pbpaste', stdout=PIPE, text=True) as proc:
                yield proc.stdout

        elif shutil.which('xsel'):
            with Popen(['xsel', '--clipboard', '--output'],
                       stdout=PIPE, text=True) as proc:
                yield proc.stdout

    elif mode == 'w':
        if shutil.which('pbcopy'):
            with Popen('pbcopy', stdin=PIPE, text=True) as proc:
                yield proc.stdin

        elif shutil.which('xsel'):
            with Popen(['xsel', '--clipboard', '--input'],
                       stdin=PIPE, text=True) as proc:
                yield proc.stdin


def main():
    with ExitStack() as stack:
        clip_r = stack.enter_context(open_clipboard('r'))
        clip_w = stack.enter_context(open_clipboard('w'))

        input = clip_r if sys.stdin.isatty() else sys.stdin

        for line in input:
            if sys.stdin.isatty() or not sys.stdout.isatty():
                sys.stdout.write(line)
            clip_w.write(line)


if __name__ == '__main__':
    main()
